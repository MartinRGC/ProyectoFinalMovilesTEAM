<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterSellerActivity">

    <Button
        android:id="@+id/bncustomer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="103dp"
        android:background="#D9D9D9"
        android:text="Cliente"
        android:textColor="#474646"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnsel"
        app:layout_constraintEnd_toStartOf="@+id/btnsel"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnsel"
        android:layout_width="105dp"
        android:layout_height="48dp"
        android:layout_marginTop="49dp"
        android:layout_marginEnd="110dp"
        android:layout_marginBottom="40dp"
        android:background="#462B9C"
        android:text="Vendedor"
        android:textColor="@color/gray"
        app:layout_constraintBottom_toTopOf="@+id/tvsignupcon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/bncustomer"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnEnviar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="77dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="79dp"
        android:layout_marginBottom="35dp"
        android:background="@drawable/rectsignup"
        android:text="REGISTRARSE"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/tvcondcon"
        app:layout_constraintEnd_toEndOf="@+id/btnlistusuarios"
        app:layout_constraintHorizontal_bias="0.606"
        app:layout_constraintStart_toStartOf="@+id/tvcondcon"
        app:layout_constraintTop_toBottomOf="@+id/btnlistusuarios" />

    <TextView
        android:id="@+id/tvsignupcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="251dp"
        android:layout_marginBottom="31dp"
        android:text="Registrate gratis"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@+id/edtusercutomer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edtusercutomer"
        app:layout_constraintTop_toBottomOf="@+id/btnsel" />

    <TextView
        android:id="@+id/tvcondcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Al seleccionar, aceptas lo siguiente"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@+id/tvtermscon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnEnviar" />

    <TextView
        android:id="@+id/tvtermscon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:text="Terminos y Condiciones"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvcondcon" />

    <EditText
        android:id="@+id/btnlistusuarios"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/rectext1"
        android:ems="10"
        android:hint="    Email"
        android:inputType="text"
        android:textColor="#949494"
        app:layout_constraintBottom_toTopOf="@+id/btnEnviar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtdatecustomer" />

    <EditText
        android:id="@+id/edtusercutomer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="@drawable/rectext1"
        android:ems="10"
        android:hint="    RUC"
        android:inputType="text"
        android:textColor="#949494"
        app:layout_constraintBottom_toTopOf="@+id/edtpsswcustomer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvsignupcon" />

    <EditText
        android:id="@+id/edtdatecustomer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/rectext1"
        android:ems="10"
        android:hint="    Nombre empresa"
        android:inputType="text"
        android:textColor="#949494"
        app:layout_constraintBottom_toTopOf="@+id/btnlistusuarios"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtpsswcustomer" />

    <EditText
        android:id="@+id/edtpsswcustomer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="53dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/rectext1"
        android:ems="10"
        android:hint="    Password"
        android:inputType="text"
        android:textColor="#949494"
        app:layout_constraintBottom_toTopOf="@+id/edtdatecustomer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/edtusercutomer"
        app:layout_constraintTop_toBottomOf="@+id/edtusercutomer" />

</androidx.constraintlayout.widget.ConstraintLayout>