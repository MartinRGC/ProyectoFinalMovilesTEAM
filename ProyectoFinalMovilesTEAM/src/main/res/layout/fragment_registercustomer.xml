<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.RegistercustomerFragment">

    <!-- TODO: Update blank fragment layout -->
    <Button
        android:id="@+id/bncustomer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="103dp"
        android:background="#462B9C"
        android:text="Consumer"
        android:textColor="@color/gray"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnsel"
        app:layout_constraintEnd_toStartOf="@+id/btnsel"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnsel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="49dp"
        android:layout_marginEnd="110dp"
        android:layout_marginBottom="60dp"
        android:background="#D9D9D9"
        android:text="Seller"
        android:textColor="#474646"
        app:layout_constraintBottom_toTopOf="@+id/tvsignupcon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/bncustomer"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnsigncustomer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="77dp"
        android:layout_marginEnd="79dp"
        android:layout_marginBottom="53dp"
        android:background="@drawable/rectsignup"
        android:text="Sign up"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/tvcondcon"
        app:layout_constraintEnd_toEndOf="@+id/edtemailcustomer"
        app:layout_constraintStart_toStartOf="@+id/tvcondcon"
        app:layout_constraintTop_toBottomOf="@+id/edtemailcustomer" />

    <TextView
        android:id="@+id/tvsignupcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginBottom="31dp"
        android:text="Sign up free account"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@+id/edtusercutomer"
        app:layout_constraintStart_toStartOf="@+id/edtusercutomer"
        app:layout_constraintTop_toBottomOf="@+id/btnsel" />

    <TextView
        android:id="@+id/tvcondcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="By selecting up you agree to the following "
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@+id/tvtermscon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnsigncustomer" />

    <TextView
        android:id="@+id/tvtermscon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:text="terms and coditions"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tvcondcon"
        app:layout_constraintStart_toStartOf="@+id/tvcondcon"
        app:layout_constraintTop_toBottomOf="@+id/tvcondcon" />

    <EditText
        android:id="@+id/edtphonecustomer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="22dp"
        android:background="@drawable/rectext1"
        android:ems="10"
        android:inputType="text"
        android:text="Phone"
        android:textColor="#949494"
        app:layout_constraintBottom_toTopOf="@+id/edtdatecustomer"
        app:layout_constraintStart_toStartOf="@+id/edtpsswcustomer"
        app:layout_constraintTop_toBottomOf="@+id/edtpsswcustomer" />

    <EditText
        android:id="@+id/edtemailcustomer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="@drawable/rectext1"
        android:ems="10"
        android:inputType="text"
        android:text="Email"
        android:textColor="#949494"
        app:layout_constraintBottom_toTopOf="@+id/btnsigncustomer"
        app:layout_constraintStart_toStartOf="@+id/edtdatecustomer"
        app:layout_constraintTop_toBottomOf="@+id/edtdatecustomer" />

    <EditText
        android:id="@+id/edtusercutomer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="26dp"
        android:background="@drawable/rectext1"
        android:ems="10"
        android:inputType="text"
        android:text="Username"
        android:textColor="#949494"
        app:layout_constraintBottom_toTopOf="@+id/edtpsswcustomer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvsignupcon" />

    <EditText
        android:id="@+id/edtdatecustomer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:background="@drawable/rectext1"
        android:ems="10"
        android:inputType="text"
        android:text="Date of birth"
        android:textColor="#949494"
        app:layout_constraintBottom_toTopOf="@+id/edtemailcustomer"
        app:layout_constraintStart_toStartOf="@+id/edtphonecustomer"
        app:layout_constraintTop_toBottomOf="@+id/edtphonecustomer" />

    <EditText
        android:id="@+id/edtpsswcustomer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="22dp"
        android:background="@drawable/rectext1"
        android:ems="10"
        android:inputType="text"
        android:text="Password"
        android:textColor="#949494"
        app:layout_constraintBottom_toTopOf="@+id/edtphonecustomer"
        app:layout_constraintStart_toStartOf="@+id/edtusercutomer"
        app:layout_constraintTop_toBottomOf="@+id/edtusercutomer" />
</androidx.constraintlayout.widget.ConstraintLayout>